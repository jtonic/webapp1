{
  "name": "simple-web-app",
  "version": "1.0.0",
  "description": "A simple web application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "client": "open src/client/index.html",
    "build": "tsc",
    "start:server": "node dist/src/server/index.js",
    "start": "npm run build && npm run start:server",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"./**/*.{js,html,json,md}\"",
    "gen:types:petstore": "openapi-typescript companion/openapi/petstore.yaml -o src/types/petstore.ts",
    "gen:types:persons": "openapi-typescript companion/openapi/tictactoe.yaml -o src/types/tictactoe.ts",
    "gen:types:tictactoe": "openapi-typescript companion/openapi/persons.yaml -o src/types/persons.ts",
    "gen:types": "npm-run-all --parallel gen:types:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/cors": "^2.8.12",
    "eslint": "^9.30.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.4"
  }
}
