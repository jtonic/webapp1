{
  "name": "simple-web-app",
  "version": "1.0.0",
  "description": "A simple web application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm-run-all --parallel start:server start:client",
    "build": "npm-run-all build:server build:client",
    "build:server": "tsc",
    "build:client": "webpack --mode production",
    "start:server": "node dist/src/server/index.js",
    "start:client": "webpack serve --mode development --open",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:web": "web-test-runner test/**/*.test.ts --node-resolve",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"./**/*.{js,html,json,md}\"",
    "gen:types:petstore": "openapi-typescript companion/openapi/petstore.yaml -o src/types/petstore.ts",
    "gen:types:persons": "openapi-typescript companion/openapi/tictactoe.yaml -o src/types/tictactoe.ts",
    "gen:types:tictactoe": "openapi-typescript companion/openapi/persons.yaml -o src/types/persons.ts",
    "gen:types": "npm-run-all --parallel gen:types:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@types/chai": "^5.2.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/sinon": "^17.0.4",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/dev-server-import-maps": "^0.2.1",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-commands": "^0.9.0",
    "chai": "^5.2.0",
    "esbuild": "^0.25.6",
    "eslint": "^9.30.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
